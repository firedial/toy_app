<p id="notice"><%= notice %></p>

<h1>Micoroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micoroposts.each do |micoropost| %>
      <tr>
        <td><%= micoropost.content %></td>
        <td><%= micoropost.user_id %></td>
        <td><%= link_to 'Show', micoropost %></td>
        <td><%= link_to 'Edit', edit_micoropost_path(micoropost) %></td>
        <td><%= link_to 'Destroy', micoropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

